<%- include('partials/broilerup') %>
<h1 class="text-center text-blue-900 font-bold text-3xl m-5">Your questions on this Product</h1>
<div class="m-3 p-3">
    <% for( let question of ques ) { %>
        <div class="m-2 p-3 rounded-2xl shadow-lg border-[2px] border-blue-800">
            <p class="font-bold text-lg">Q) <%= question.Question %></p><hr>
            <div class="flex justify-start gap-2 text-lg text-gray-900 py-3">
                <span>Ans : </span>
                <div class="<%= question.Answer?'text-gray-700 px-5':'text-gray-500' %>"><%= question.Answer?question.Answer:'Yet not answered' %></div>
            </div>
        </div>
    <% } %>
   
</div>
