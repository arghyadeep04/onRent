<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<h1 class="text-center p-3 m-3">Answer this question</h1>
<form method="post" action="/questions/answer" novalidate class="needs-validation m-3 p-3">
    <div class="mb-3">
        <label for="type" class="form-label">Question </label>
        <input type="text" class="form-control" id="Desc" name="ques" readonly value="<%= que.Question %>">
  
        <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
      </div><br>
    <div class="mb-3">
      <label for="type" class="form-label">Your Answer </label>
      <textarea class="form-control" id="Desc" name="Answer" required style="white-space: pre-wrap;"></textarea>

      <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
    </div><br>
    <input type="text" style="display: none;" value="<%= que._id %>" name="qid" required>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <script src="/formvalid.js"></script>