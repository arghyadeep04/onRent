<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<h1 class="text-center p-3 m-3">Book this Product</h1>
<form method="post" action="/bookings/book" novalidate class="needs-validation m-3 p-3">
    <div class="mb-3">
      <label for="prodid" class="form-label">Product ID</label>
      <input type="text" class="form-control" id="prodid" aria-describedby="emailHelp" value="<%= prod._id %>" required readonly name="book[Item]">
      <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
    </div><br>
    <div class="mb-3">
      <label for="fdate" class="form-label">Book From</label>
      <input type="datetime-local" class="form-control" id="fdate" name="book[Bookfrom]">
    </div><br>
    <div class="mb-3">
        <label for="fdate" class="form-label">Book Till</label>
        <input type="datetime-local" class="form-control" id="fdate" name="book[Bookto]">
      </div><br>
    <div class="mb-3">
      <label class="form-label" for="custm">Your Message for Owner</label>
      <textarea class="form-control" id="custm" name="book[Custmessage]"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  <script src="/formvalid.js"></script>
