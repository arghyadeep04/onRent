<%- include('partials/broilerup') %>
<h1 class="text-4xl text-blue-700 text-center font-bold m-3 p-2 mb-6">Your favourite products</h1><hr class="m-3 h-[2px] w-[98vw] bg-blue-700"> 
<% for( let prod of products ) { %>

    <div class="flex justify-around rounded-xl shadow-xl w-[90vw]  my-[2vh] border-[3px] border-blue-900 m-[5vw]">
        <div class="max-w-[30%] max-h-[50vh]">
        <img src="<%= prod.Thumbnail.path %>" alt="" class=" m-3 rounded-lg max-h-[40vh]">
        <div class="font-bold text-xl px-[4vw] py-[1vh] text-center max-h-[10vh]">Rent : <%= prod.Price %> / <%= prod.Basis %></div></div>
        <div class="w-[60%]">
            <h5 class="text-2xl font-serif text-center m-2"><%= prod.Name %></h5>
            <p class="text-md text-center p-3"><%= prod.Desc.slice(0,200)+"..." %></p>
            
            <div class="p-10 flex justify-around -bottom-0">
                <a href="/products/view<%= prod._id %>"><button class="rounded-3xl bg-blue-600 text-[1rem] font-bold text-center py-2 px-[5vw] hover:bg-blue-800">View Item</button></a>
            </div>
        </div>
    </div>
    <% } %>

